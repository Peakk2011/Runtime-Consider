{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/core/app/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@window/*": ["src/core/window/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
